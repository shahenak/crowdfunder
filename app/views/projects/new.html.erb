<h1>New Project</h1>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_field :deadline %>
  </div>

  <div class="field">
    <h2>New Reward</h2>
    <%= f.fields_for :rewards do |rewards_fields| %>
    <div class="field">
      <%= rewards_fields.label :name %>
      <%= rewards_fields.text_field :name %>
    </div>

    <div class="field">
      <%= rewards_fields.label :description %>
      <%= rewards_fields.text_field :description %>
    </div>

    <div class="field">
      <%= rewards_fields.label :amount %>
      <%= rewards_fields.number_field :amount %>
    </div>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>
